AVG = batters$H[batters$AB > 0]/batters$AB[batters$AB > 0]
findAverageBattingAverageByYear = function(startYear, endYear){
total = mean(AVG[batters$AB > 300 & batters$yearID == startYear], na.rm = TRUE)
for (i in (startYear+1):endYear) {
total = c(total,mean(AVG[batters$AB > 300 & batters$yearID == i], na.rm = TRUE))
}
return(total)
}
plot(x = 1871:2014, y = findAverageBattingAverageByYear(1871, 2014))
